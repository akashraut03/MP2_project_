          <div class="responsive-toggle">
            <i class="fas fa-bars"></i>
          </div>
        </div>
        <div class="links">
          <ul>
            <%if(user){%>
              <li><a href="/">Home</a></li>
              <li><a href="/sites/fort">Explore Fort</a></li>
              <li><a href="/user/book">Booking</a></li>
              <li><a href="/auth/logout">Logout</a></li>
